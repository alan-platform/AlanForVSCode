{
    "name": "alan",
    "displayName": "Alan",
    "description": "",
    "icon": "logo.png",
    "version": "0.3.2",
    "publisher": "Kjerner",
    "repository": {
        "type": "git",
        "url": "https://github.com/Kjerner/AlanForVSCode.git"
    },
    "engines": {
        "vscode": "^1.31.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:alan"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "taskDefinitions": [
            {
                "type": "alan",
                "required": [
                    "task"
                ],
                "properties": {
                    "task": {
                        "type": "string",
                        "description": "The Alan task to customize"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "editor.gotoAlanDefinitions",
                "title": "Go to Fuzzy Definitions"
            }
        ],
        "configuration": {
            "properties": {
                "alan-definitions.integrateWithGoToDefinition": {
                    "type": "boolean",
                    "default": true,
                    "description": "Integrate with 'Go to Definition'"
                },
                "alan-definitions.taskShell": {
                    "type": "string",
                    "default": null,
                    "description": "Shell to use for executing Alan tasks.\nUse c:\\windows\\sysnative\\bash.exe for WSL."
                }
            }
        },
        "languages": [
            {
                "id": "alan",
                "aliases": [
                    "Alan",
                    "alan"
                ],
                "extensions": [
                    "alan",
                    "control",
                    "grammar",
                    "schema"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "alan",
                "scopeName": "source.alan",
                "path": "./syntaxes/alan.tmLanguage"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "alanTreeView",
                    "name": "Alan Tree",
                    "when": "isAlanFile"
                }
            ]
        },
        "problemMatchers": [
            {
                "name": "alanc",
                "owner": "alan",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*alan) from ([0-9]+):([0-9]+) to ([0-9]+):([0-9]+) (error|warning): (.*)",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "endLine": 4,
                        "endColumn": 5,
                        "severity": 6,
                        "message": 7
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test",
        "package": "mkdir -p dist && vsce package --out dist/fabric-vscode.vsix"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^8.0.0",
        "mocha": "^5.2.0",
        "typescript": "^3.3.3",
        "vsce": "^1.57.0",
        "vscode": "^1.1.29"
    },
    "dependencies": {
        "nak": "^0.3.3"
    }
}
