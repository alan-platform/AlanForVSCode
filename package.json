{
    "name": "fabric",
    "displayName": "Fabric",
    "description": "",
    "version": "0.0.1",
    "publisher": "M-industries",
    "repository": {
        "type": "git",
        "url": "https://gitlab.m-industries.com/alan-public/fabric-for-vscode"
    },
    "engines": {
        "vscode": "^1.9.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:alan"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "editor.gotoAlanDefinitions",
                "title": "Go to Fuzzy Definitions"
            }
        ],
        "configuration": {
            "properties": {
                "alan-definitions.integrateWithGoToDefinition": {
                    "type": "boolean",
                    "default": true,
                    "description": "Integrate with 'Go to Definition'"
                }
            }
        },
        "languages": [{
            "id": "alan",
            "aliases": ["Alan", "alan"],
            "extensions": [
                ".alan",
                "control",
                "grammar",
                "schema"
            ],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "alan",
            "scopeName": "source.alan",
            "path": "./syntaxes/alan.tmLanguage"
        }]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test",
        "package": "mkdir -p dist && vsce package --out dist/fabric-vscode.vsix"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.3",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32",
        "nak": "^0.3.3",
        "vsce": "^1.18.0"
    },
    "dependencies": {
        "nak": "^0.3.3"
    }
}
