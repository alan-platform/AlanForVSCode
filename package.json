{
    "name": "alan",
    "displayName": "Alan",
    "description": "Provides commands, tasks, syntax highlighting, goto/peek and an outline for Alan files.",
    "icon": "logo.png",
    "galleryBanner": {
        "color": "#1e1e1e",
        "theme": "dark"
    },
    "version": "0.4.17",
    "publisher": "Kjerner",
    "repository": {
        "type": "git",
        "url": "https://github.com/alan-platform/AlanForVSCode.git"
    },
    "engines": {
        "vscode": "^1.31.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:alan",
        "workspaceContains:**/alan",
        "workspaceContains:alan",
        "workspaceContains:project.json"
    ],
    "main": "./dist/extension",
    "contributes": {
        "snippets": [
            {
                "language": "alan",
                "path": "./snippets/model.application.json"
            }
        ],
        "taskDefinitions": [
            {
                "type": "alan",
                "required": [
                    "task"
                ],
                "properties": {
                    "task": {
                        "type": "string",
                        "description": "The Alan task to customize"
                    }
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "alan.tasks.build"
                },
                {
                    "command": "alan.tasks.fetch"
                },
                {
                    "when": "resourceLangId == alan && resourceFilename == connections.alan",
                    "command": "alan.tasks.package"
                },
                {
                    "when": "isAlanDeploySupported",
                    "command": "alan.tasks.deploy"
                }
            ],
            "editor/title/context": [
                {
                    "command": "alan.tasks.build"
                },
                {
                    "command": "alan.tasks.fetch"
                },
                {
                    "when": "resourceLangId == alan && resourceFilename == connections.alan",
                    "command": "alan.tasks.package"
                },
                {
                    "when": "isAlanDeploySupported",
                    "command": "alan.tasks.deploy"
                }
            ],
            "explorer/context": [
                {
                    "command": "alan.tasks.build"
                },
                {
                    "command": "alan.tasks.fetch"
                },
                {
                    "when": "resourceLangId == alan && resourceFilename == connections.alan",
                    "command": "alan.tasks.package"
                },
                {
                    "when": "isAlanDeploySupported",
                    "command": "alan.tasks.deploy"
                }
            ],
            "commandPalette": [
                {
                    "command": "alan.tasks.build"
                },
                {
                    "command": "alan.tasks.generateMigration"
                },
                {
                    "when": "resourceLangId == alan && resourceFilename == connections.alan",
                    "command": "alan.tasks.package"
                },
                {
                    "command": "alan.tasks.fetch"
                },
                {
                    "when": "isAlanDeploySupported",
                    "command": "alan.tasks.deploy"
                },
                {
                    "when": "resourceLangId == alan",
                    "command": "alan.editor.showDefinitions"
                }
            ]
        },
        "commands": [
            {
                "command": "alan.tasks.build",
                "title": "Alan: Build"
            },
            {
                "command": "alan.tasks.generateMigration",
                "title": "Alan: Generate Migration"
            },
            {
                "command": "alan.tasks.package",
                "title": "Alan: Package Deployment"
            },
            {
                "command": "alan.tasks.fetch",
                "title": "Alan: Fetch"
            },
            {
                "command": "alan.tasks.deploy",
                "title": "Alan: Deploy"
            },
            {
                "command": "alan.editor.showDefinitions",
                "title": "Alan: Show Definitions"
            }
        ],
        "configuration": {
            "properties": {
                "alan-definitions.integrateWithGoToDefinition": {
                    "type": "boolean",
                    "default": true,
                    "description": "Integrate with 'Go to Definition'"
                },
                "alan-definitions.taskShell": {
                    "type": "string",
                    "default": null,
                    "description": "Custom bash shell for running Alan tasks."
                },
                "alan-definitions.showTaskOutput": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show output window when running Alan tasks."
                }
            }
        },
        "configurationDefaults": {
            "[alan]": {
                "editor.autoIndent": true,
                "editor.useTabStops": true,
                "editor.insertSpaces": false,
                "editor.detectIndentation": false
            }
        },
        "languages": [
            {
                "id": "alan",
                "aliases": [
                    "Alan",
                    "alan"
                ],
                "extensions": [
                    "alan",
                    "control",
                    "grammar",
                    "schema"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "alan",
                "scopeName": "source.alan",
                "path": "./syntaxes/alan.tmLanguage"
            }
        ],
        "viewsContainers": {},
        "views": {},
        "problemMatchers": [
            {
                "name": "alanc-range",
                "owner": "alan",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*alan) from ([0-9]+):([0-9]+) to ([0-9]+):([0-9]+) (error|warning): (.*)",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "endLine": 4,
                        "endColumn": 5,
                        "severity": 6,
                        "message": 7
                    }
                ]
            },
            {
                "name": "alanc-lc",
                "owner": "alan",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*alan) at ([0-9]+):([0-9]+) (error|warning): (.*)",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "compile": "webpack --mode none",
        "watch": "webpack --mode none --watch",
        "test-compile": "tsc -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^10.14.6",
        "mocha": "^5.2.0",
        "ts-loader": "^6.0.0",
        "typescript": "^3.3.3",
        "vsce": "^1.64.0",
        "vscode": "^1.1.33",
        "webpack": "^4.30.0",
        "webpack-cli": "^3.3.2"
    },
    "dependencies": {
        "sanitize-filename": "^1.6.1"
    }
}
